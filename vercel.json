{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "client/dist"
      }
    },
    {
      "src": "api/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/combined",
      "dest": "/api/combined.js"
    },
    {
      "src": "/(.*)",
      "dest": "client/$1"
    }
  ],
  "installCommand": "npm install --prefix client && npm install"
}